@model IEnumerable<ComplaintManagementApp.Complaint_tbl>

@{
    ViewBag.Title = "Index";
}


<hr />
<br />
<br />
<div style="border:dotted thin #ff0000; margin:0 auto; width:90%">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Complaint_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Complaint_Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ComplaintId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ComplaintId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ComplaintId })
                </td>
            </tr>
        }

    </table>
</div>